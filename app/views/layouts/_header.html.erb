<header class="navbar bavbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".menu_home"), root_path %></li>
        <li><%= link_to t(".menu_help"), help_path %></li>
        <% if logged_in?  %>
          <li><%= link_to t(".menu_users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".dropdown_menu.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".dropdown_menu.profile"), current_user %></li>
              <li><%= link_to t(".dropdown_menu.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".dropdown_menu.log_out"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".menu_log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav
  </div>
</header>
