<% if @user.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= t "noti.error.the_form_contain" %>
    <%= pluralize(@user.errors.count, t("noti.error.error")) %>
  </div>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
