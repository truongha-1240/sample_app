<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("shared.micropost_form.placeholder") %>
  </div>
  <%= f.submit t("shared.micropost_form.post_submit") , class: "btn btn-primary"%>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image.accept_format_html %>
  </span>
<% end %>
<%= javascript_pack_tag "micropost_image" %>
